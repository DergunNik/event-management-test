{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AuthOptions": {
    "SaltSize": 16,
    "PasswordHashSize": 32,
    "Iterations": 4,
    "MemorySize": 1024,
    "DegreeOfParallelism": 4
  },
  "TokensOptions": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "AuthAPI",
    "Audience": "EventsApp",
    "JwtExpirationInMinutes": 15,
    "RefreshExpirationInDays": 7,
    "RefreshTokenSize": 32
  },
  "ConnectionStrings": {
    "Default": "Host=postgres;Port=5432;Database=mydb;Username=user;Password=pass"
  },
  "AllowedHosts": "*"
}
