{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "HashOptions": {
    "SaltSize": 16,
    "PasswordHashSize": 32,
    "Iterations": 4,
    "MemorySize": 1024,
    "DegreeOfParallelism": 4
  },
  "AuthOptions": {
    "PasswordMinLength": 8,
    "PasswordMaxLength": 64,
    "NameMinLength": 2,
    "NameMaxLength": 32,
    "TitleMinLength": 2,
    "TitleMaxLength": 128
  },
  "TokensOptions": {
    "Secret": "",
    "Issuer": "AuthAPI",
    "Audience": "EventsApp",
    "JwtExpirationInMinutes": 15,
    "RefreshExpirationInDays": 7,
    "RefreshTokenSize": 32
  },
  "ConnectionStrings": {
    "Default": ""
  },
  "AllowedHosts": "*"
}